{
    "functions": {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            ".git",
            ".gitignore",
            "__pycache__",
            "venv"
        ],
        "runtime": "python311"
    },
    "hosting": {
        "public": "frontend/out",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/manual_amazon_sync",
                "function": "manual_amazon_sync"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
}